<UserControl x:Class="WindowsFormsApp12345.Bar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsFormsApp12345"
             mc:Ignorable="d" 
                                   d:DesignHeight="300" Background="Black" BorderThickness="1" Width="239" HorizontalAlignment="Left" Height="300">
    <UserControl.BorderBrush>
        <SolidColorBrush Color="Black" />
    </UserControl.BorderBrush>
    <Border x:Name="Processvalue" VerticalAlignment="Bottom" Height="300"  >
        <Border.Background>
            <LinearGradientBrush x:Name="processvalue" EndPoint="0.5,0" SpreadMethod="Reflect" StartPoint="0,0">
                <GradientStop Color="CornflowerBlue" Offset="0"/>
                <GradientStop Color="white" Offset="11"/>

            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
